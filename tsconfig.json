{
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist",

    "module": "nodenext",
    "target": "es2020", 
    "lib": ["es2020"], 
    "types": ["node"],

    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "strictNullChecks": false,

    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": false,

    "strict": true,
    "isolatedModules": true,
    "skipLibCheck": true
  },
  "include": ["src"]
}
